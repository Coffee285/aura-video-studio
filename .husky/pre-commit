#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Scanning staged files for placeholder markers..."

# Run placeholder scanner
node scripts/audit/find-placeholders.js

if [ $? -ne 0 ]; then
  echo ""
  echo "❌ Commit rejected: Placeholder markers found in code"
  echo ""
  echo "Please remove TODO/FIXME/HACK comments before committing."
  echo "To bypass this check, use: git commit --no-verify"
  echo ""
  exit 1
fi

echo "✅ No placeholder markers found"
exit 0

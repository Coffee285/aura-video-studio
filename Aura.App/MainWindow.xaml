<Window
    x:Class="Aura.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aura.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- App title bar -->
        <TextBlock 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Aura Video Studio"
            FontSize="18"
            FontWeight="SemiBold"
            Margin="12,8"
            VerticalAlignment="Center" />
        
        <!-- Navigation panel -->
        <NavigationView 
            x:Name="NavView"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            IsSettingsVisible="True"
            IsBackButtonVisible="Collapsed"
            PaneDisplayMode="Left"
            SelectionChanged="NavView_SelectionChanged">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Create" Tag="create" Icon="Add" />
                <NavigationViewItem Content="Storyboard" Tag="storyboard" Icon="Edit" />
                <NavigationViewItem Content="Render" Tag="render" Icon="Video" />
                <NavigationViewItem Content="Publish" Tag="publish" Icon="Upload" />
                <NavigationViewItem Content="Library" Tag="library" Icon="Library" />
                <NavigationViewItemSeparator />
                <NavigationViewItem Content="Hardware Profile" Tag="hardware" Icon="DeviceLaptop" />
            </NavigationView.MenuItems>
            
            <Frame x:Name="ContentFrame" />
        </NavigationView>
        
        <!-- Status bar -->
        <Grid 
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            Height="28">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                x:Name="StatusText"
                Grid.Column="0"
                Text="Ready" 
                Margin="12,0"
                VerticalAlignment="Center"/>
            
            <StackPanel 
                Grid.Column="2"
                Orientation="Horizontal"
                Margin="12,0">
                
                <TextBlock 
                    x:Name="EncoderInfoText"
                    Text="Encoder: Auto"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center"/>
                
                <TextBlock 
                    x:Name="CacheInfoText"
                    Text="Cache: 0 MB"
                    VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
<Page
    x:Class="Aura.App.Views.PublishView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aura.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" MaxWidth="800" Spacing="24">
            
            <!-- Header -->
            <TextBlock 
                Text="Publish Video" 
                Style="{ThemeResource TitleTextBlockStyle}"
                Margin="0,0,0,12"/>
            
            <!-- Video Metadata -->
            <Expander Header="Video Metadata" IsExpanded="True">
                <StackPanel Spacing="12" Padding="12">
                    <TextBox 
                        Header="Title"
                        PlaceholderText="Video title..."
                        MaxLength="100"/>
                    
                    <TextBox 
                        Header="Description"
                        PlaceholderText="Video description..."
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Height="120"/>
                    
                    <TextBox 
                        Header="Tags (comma-separated)"
                        PlaceholderText="tag1, tag2, tag3"/>
                    
                    <ComboBox 
                        Header="Category"
                        Width="300"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                        <ComboBoxItem Content="Education"/>
                        <ComboBoxItem Content="Entertainment"/>
                        <ComboBoxItem Content="How-to & Style"/>
                        <ComboBoxItem Content="Science & Technology"/>
                        <ComboBoxItem Content="Gaming"/>
                    </ComboBox>
                </StackPanel>
            </Expander>
            
            <!-- Thumbnail -->
            <Expander Header="Thumbnail" IsExpanded="True">
                <StackPanel Spacing="12" Padding="12">
                    <Border 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Width="320"
                        Height="180"
                        HorizontalAlignment="Left">
                        <TextBlock 
                            Text="No thumbnail selected"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Upload Thumbnail"/>
                        <Button Content="Generate Thumbnail"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
            
            <!-- Chapters -->
            <Expander Header="Chapters (from markers)" IsExpanded="False">
                <StackPanel Spacing="12" Padding="12">
                    <ListView Height="200">
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="0:00" Width="60"/>
                                <TextBlock Text="Introduction"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="1:30" Width="60"/>
                                <TextBlock Text="Main Content"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="5:00" Width="60"/>
                                <TextBlock Text="Conclusion"/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                    <Button Content="Add Chapter"/>
                </StackPanel>
            </Expander>
            
            <!-- YouTube Upload -->
            <Expander Header="YouTube Upload (Optional)" IsExpanded="True">
                <StackPanel Spacing="12" Padding="12">
                    <InfoBar
                        Title="YouTube API"
                        Message="Requires YouTube Data API credentials. Upload is manual only - never automatic."
                        IsOpen="True"
                        Severity="Informational"
                        IsClosable="False"/>
                    
                    <ComboBox 
                        Header="Privacy"
                        Width="300"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                        <ComboBoxItem Content="Private"/>
                        <ComboBoxItem Content="Unlisted"/>
                        <ComboBoxItem Content="Public"/>
                    </ComboBox>
                    
                    <CheckBox Content="Made for kids"/>
                    <CheckBox Content="Age restriction"/>
                    
                    <CalendarDatePicker 
                        Header="Schedule (Optional)"
                        PlaceholderText="Leave empty for immediate"/>
                </StackPanel>
            </Expander>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Save Metadata" Style="{ThemeResource AccentButtonStyle}"/>
                <Button Content="Upload to YouTube" IsEnabled="False"/>
                <Button Content="Export Metadata (JSON)"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</Page>

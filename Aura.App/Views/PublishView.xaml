<Page
    x:Class="Aura.App.Views.PublishView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aura.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="32" MaxWidth="800" Spacing="20">
            
            <!-- Header -->
            <StackPanel Spacing="8" Margin="0,0,0,16">
                <TextBlock 
                    Text="Publish Video" 
                    Style="{ThemeResource TitleTextBlockStyle}"/>
                <TextBlock 
                    Text="Add metadata and publish to platforms"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            </StackPanel>
            
            <!-- Video Metadata -->
            <Expander Header="Video Metadata" IsExpanded="True">
                <StackPanel Spacing="16" Padding="16">
                    <TextBox 
                        Header="Title"
                        PlaceholderText="Enter an engaging, descriptive title..."
                        MaxLength="100"
                        ToolTipService.ToolTip="Keep under 70 characters for best display"/>
                    
                    <TextBox 
                        Header="Description"
                        PlaceholderText="Describe your video content, include links and timestamps..."
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Height="150"
                        ToolTipService.ToolTip="First 2-3 lines are shown in search results"/>
                    
                    <TextBox 
                        Header="Tags (comma-separated)"
                        PlaceholderText="tag1, tag2, tag3"
                        ToolTipService.ToolTip="Help viewers discover your content"/>
                    
                    <ComboBox 
                        Header="Category"
                        Width="300"
                        HorizontalAlignment="Left"
                        SelectedIndex="0"
                        ToolTipService.ToolTip="Choose the most relevant category">
                        <ComboBoxItem Content="Education"/>
                        <ComboBoxItem Content="Entertainment"/>
                        <ComboBoxItem Content="How-to & Style"/>
                        <ComboBoxItem Content="Science & Technology"/>
                        <ComboBoxItem Content="Gaming"/>
                        <ComboBoxItem Content="News & Politics"/>
                        <ComboBoxItem Content="People & Blogs"/>
                    </ComboBox>
                </StackPanel>
            </Expander>
            
            <!-- Thumbnail -->
            <Expander Header="Thumbnail" IsExpanded="True">
                <StackPanel Spacing="16" Padding="16">
                    <TextBlock 
                        Text="Recommended: 1280Ã—720 pixels (16:9 aspect ratio)"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    
                    <Border 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="2" 
                        CornerRadius="8"
                        Width="320"
                        Height="180"
                        HorizontalAlignment="Left"
                        Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                            <FontIcon Glyph="&#xEB9F;" FontSize="32" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock 
                                Text="No thumbnail selected"
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            Content="Upload Thumbnail"
                            ToolTipService.ToolTip="Choose an image from your computer"/>
                        <Button 
                            Content="Generate from Video"
                            ToolTipService.ToolTip="Auto-generate from a video frame"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
            
            <!-- Chapters -->
            <Expander Header="Chapters (from markers)" IsExpanded="False">
                <StackPanel Spacing="12" Padding="12">
                    <ListView Height="200">
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="0:00" Width="60"/>
                                <TextBlock Text="Introduction"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="1:30" Width="60"/>
                                <TextBlock Text="Main Content"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="5:00" Width="60"/>
                                <TextBlock Text="Conclusion"/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                    <Button Content="Add Chapter"/>
                </StackPanel>
            </Expander>
            
            <!-- YouTube Upload -->
            <Expander Header="YouTube Upload (Optional)" IsExpanded="True">
                <StackPanel Spacing="12" Padding="12">
                    <InfoBar
                        Title="YouTube API"
                        Message="Requires YouTube Data API credentials. Upload is manual only - never automatic."
                        IsOpen="True"
                        Severity="Informational"
                        IsClosable="False"/>
                    
                    <ComboBox 
                        Header="Privacy"
                        Width="300"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                        <ComboBoxItem Content="Private"/>
                        <ComboBoxItem Content="Unlisted"/>
                        <ComboBoxItem Content="Public"/>
                    </ComboBox>
                    
                    <CheckBox Content="Made for kids"/>
                    <CheckBox Content="Age restriction"/>
                    
                    <CalendarDatePicker 
                        Header="Schedule (Optional)"
                        PlaceholderText="Leave empty for immediate"/>
                </StackPanel>
            </Expander>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Save Metadata" Style="{ThemeResource AccentButtonStyle}"/>
                <Button Content="Upload to YouTube" IsEnabled="False"/>
                <Button Content="Export Metadata (JSON)"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</Page>
